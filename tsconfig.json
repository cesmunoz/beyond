{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./packages",
    "paths": {
      "@beyond/lib": ["./lib"]
    },
    "composite": false
  },
  "exclude": ["node_modules"],
  "references": [{ "path": "./packages/lib" }]
}
